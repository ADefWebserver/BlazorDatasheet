@page "/simple"
@using BlazorDatasheet.Data
@using BlazorDatasheet.Formats
@using BlazorDatasheet.FormulaEngine
@using BlazorDatasheet.Render

<PageTitle>Simple example</PageTitle>

<h1>Simple example</h1>

<p>Below is a sheet with 100,000 rows. There is no data validation or formatting and the default editors are used.</p>

<Datasheet
    Sheet="sheet"
    IsFixedHeight="true"
    IsFixedWidth="true"
    FixedHeightInPx="600"/>
<button @onclick="@(() => sheet.SetFormat(new CellFormat() { BackgroundColor = "red" }, sheet.Selection))">Set format to red</button>
<button @onclick="@(() => sheet.SetFormat(new CellFormat() { BackgroundColor = "blue" }, sheet.Selection))">Set format to blue</button>


@code{

    private Sheet sheet;

    protected override void OnInitialized()
    {
        sheet = new Sheet(numRows: 2000, numCols: 2000);
        sheet.ShowColumnHeadings = false;
        var engine = new FormulaEngine(sheet);
    }

}