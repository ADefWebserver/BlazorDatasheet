@inherits BaseRenderer

<input type="checkbox" disabled="@Cell.IsReadOnly" @bind="Checked"/>

@code {

    private bool _checked;

    public bool Checked
    {
        get { return _checked; }
        set
        {
            _checked = value;
            this.RequestChangeCellValue(_checked.ToString());
        }
    }

    protected override void OnParametersSet()
    {
        var val = this.Cell.GetValue<bool?>();
        if (!val.HasValue)
            _checked = false;
        else
        {
            _checked = val.Value;
        }
        base.OnParametersSet();
    }

}