@using BlazorDatasheet.Edit
@using BlazorDatasheet.Interfaces
@inherits BaseEditor<double?>
<input type="number"
       @bind="EditedValue"
       style="width: 100%; height: 100%"
       @ref="InputRef"
       @bind:event="oninput"/>

@code {
    
    public override void BeginEdit(EditEntryMode entryMode, object? editValue, string key)
    {
        try
        {
            double.TryParse(editValue?.ToString(), out var cellValue);
            EditedValue = cellValue;
            if (entryMode == EditEntryMode.Key && char.IsNumber(key[0]))
                EditedValue = int.Parse(key[0].ToString());
        }
        catch (Exception e)
        {
            EditedValue = 0;
        }
    }

}