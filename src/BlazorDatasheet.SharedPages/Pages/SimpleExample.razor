@page "/simple"
@using BlazorDatasheet.Data

<PageTitle>Simple example</PageTitle>

<h1>Simple example</h1>

<p>Below is an sheet with 100,000 rows and 7 columns. There is no data validation or formatting and the default editors are used.</p>

<Datasheet
    IsFixedHeight="true"
    Sheet="sheet"/>

@code{

    private Sheet sheet;

    protected override void OnInitialized()
    {
        sheet = new Sheet(numRows: 100000, numCols: 7);
    }

}