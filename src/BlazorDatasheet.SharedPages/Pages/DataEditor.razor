    // Utility

    #region public async Task<DTOStatus> SetConnectionSetting(ConnectionSetting objConnectionSetting)
    public async Task<DTOStatus> SetConnectionSetting(ConnectionSetting objConnectionSetting)
    {
        // The return message
        DTOStatus objDTOStatus = new DTOStatus();
        objDTOStatus.Success = true;

        // Create a Database connection string
        string strConnectionString = CreateDatabaseConnectionString(objConnectionSetting);

        // Test the database connection string
