@page "/simple"
@using BlazorDatasheet.Data
@using BlazorDatasheet.Render

<PageTitle>Simple example</PageTitle>

<h1>Simple example</h1>

<p>Below is an sheet with 100,000 rows. There is no data validation or formatting and the default editors are used.</p>

<Datasheet
    Sheet="sheet"/>

    <button @onclick="@(() => sheet.SetFormat(new Format() { BackgroundColor = "red" }, sheet.Selection))">Set format to red</button>
    <button @onclick="@(() => sheet.SetFormat(new Format() { BackgroundColor = "blue" }, sheet.Selection))">Set format to blue</button>


@code{

    private Sheet sheet;

    protected override void OnInitialized()
    {
        sheet = new Sheet(numRows: 10, numCols: 5);
    }

}