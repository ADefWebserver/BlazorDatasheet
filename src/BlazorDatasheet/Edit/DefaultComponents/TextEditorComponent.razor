@inherits BaseEditor<string>
@using BlazorDatasheet.Interfaces
@using BlazorDatasheet.Util

<input
    type="text"
    class="text-input"
    @bind="EditedValue"
    @bind:event="oninput"
    style="@CssUtil.GetStyledInput(Cell)"
    @ref="InputRef"/>

@code {

    private IReadOnlyCell Cell;
    
    public override void BeforeEdit(IReadOnlyCell cell)
    {
        Cell = cell;
    }

    public override void BeginEdit(EditEntryMode entryMode, object? editValue, string key)
    {
        EditedValue = editValue?.ToString();

        if (EditedValue == null)
            EditedValue = string.Empty;

        if (entryMode == EditEntryMode.Key && !String.IsNullOrEmpty(key) && key.Length == 1)
        {
            EditedValue = key;
        }
        EditedValue = EditedValue;
    }

}